---
import Button from "./atoms/button.svelte";
import Container from "./atoms/container.astro";
---

<header>
  <Container class="container">
    <h1 id="title">Adam Alfredsson</h1>
    <nav>
      <a href="#projects">Projects</a>
      <Button as="a" href="#contact">Contact</Button>
    </nav>
  </Container>
</header>

<style>
  header {
    margin: var(--space-8) 0;
  }

  .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  nav {
    display: none;

    @media (--viewport-sm) {
      display: flex;
      gap: var(--space-12);
      align-items: center;
    }
  }
</style>

<script>
  import gsap from "gsap";

  gsap.from("#title", {
    opacity: 0,
    y: 20,
    duration: 1,
    delay: 0.5,
    ease: "power4.out",
  });
</script>
