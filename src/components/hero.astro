---
import { Picture } from "@astrojs/image/components";
import image from "../assets/images/profile.png";
import Button from "./atoms/button.svelte";
import Container from "./atoms/container.astro";
import GridItem from "./atoms/grid-item.astro";
import Grid from "./atoms/grid.astro";
import Pattern from "./pattern.astro";

export interface Props extends astroHTML.JSX.HTMLAttributes {}

const { class: className, ...props } = Astro.props as Props;
---

<section class:list={[className, "hero"]} {...props}>
  <Container>
    <Grid class="grid">
      <GridItem class="image-container" span={[6, 4, 5]}>
        <Pattern id="hero-pattern">
          <Picture
            id="hero-image"
            class="image"
            src={image}
            alt="Me on vacation in Italy!"
            widths={[300, 600, 1200]}
            sizes="(max-width: 800px) 100vw, 800px"
            aspectRatio={1}
          />
        </Pattern>
      </GridItem>
      <GridItem class="content" span={[6]}>
        <h2>
          <span>Web</span>
          <span class="light">Fullstack</span>
          <br />
          <span>Developer</span>
        </h2>
        <p class="paragraph">
          I'm passionate about building a beautiful and accessible web
        </p>
        <Button as="a" href="#contact">Contact</Button>
      </GridItem>
    </Grid>
  </Container>
</section>

<style>
  .hero {
    margin: var(--space-16) 0;
  }

  .grid {
    row-gap: var(--space-16) !important;
  }

  .image-container {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    max-width: 400px;
  }

  .image {
    background: linear-gradient(
      to bottom right,
      var(--color-pink),
      var(--color-blue)
    );
  }

  .image :global(img) {
    width: 100%;
    height: 100%;
    filter: grayscale(30%);
  }

  .content {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: flex-start;
  }

  h2 {
    position: relative;
    font-size: var(--text-2xl);

    @media (--viewport-lg) {
      font-size: var(--text-3xl);
    }
  }

  .paragraph {
    margin-top: var(--space-8);
    margin-bottom: var(--space-12);
    font-size: var(--text-lg);

    @media (--viewport-lg) {
      font-size: var(--text-xl);
    }
  }

  .light {
    padding-left: 0.3ch;
    position: absolute;
    color: var(--color-gray-light);

    @media (--viewport-lg) {
      padding-left: 0.5ch;
    }
  }
</style>

<script>
  import gsap from "gsap";

  gsap.from(["#hero-pattern", "#hero-image"], {
    opacity: 0,
    duration: 1,
    ease: "power4.out",
    delay: 0.5,
    stagger: 0.3,
  });
</script>
